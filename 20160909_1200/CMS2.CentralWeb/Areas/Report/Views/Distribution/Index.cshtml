@using GridMvc.Html
@model CMS2.CentralWeb.Areas.Report.ViewModels.DistributionSummaryViewModel
<br />
<h4>Distribution</h4>

@using (Html.BeginForm("Index", "Distribution", FormMethod.Post, new { @class = "col-md-12 form-horizontal ", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger", id = "validationsummary" })

    <br />
    <div class="row">
        <div class="col-md-12 col-md-pull-1">
            <div class="form-group">
                @Html.LabelFor(m => m.TransactionDate, new { @class = "control-label col-md-2", @style = "width:30%; padding-right: 5px" })
                <div class="col-md-8" style="width: 30%; padding-left: 5px">
                    @Html.TextBoxFor(m => m.TransactionDate, new { @class = "form-control datecontrol" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-pull-1">
            <div class="form-group">
                @Html.LabelFor(m => m.BranchCorpOfficeId, new { @class = "control-label col-md-2", @style = "width:30%; padding-right: 5px" })
                <div class="col-md-10" style="width: 70%; padding-left: 5px">
                    @Html.DropDownListFor(m => m.BranchCorpOfficeId, (SelectList)ViewBag.BCOs, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-pull-1">
            <div class="form-group">
                <div class="control-label col-md-2" style="width: 30%; padding-right: 5px">&nbsp;</div>
                <div class="col-md-8" style="width: 30%; padding-left: 5px">
                    <input id="saveButton" type="submit" class="btn btn-default" value="Find"/>
                </div>
            </div>
        </div>
    </div>
     <br/>
    <div class="form-group">
        <div class="col-md-12 col-md-push-1" style="margin:0">
            @{
    if (Model != null)
                {
                    if (Model.DistributionViewModels != null)
                    {
                        @Html.Grid(Model.DistributionViewModels).Named("gridDistributionSummary").Columns(columns =>
                   {
                       columns.Add(m => m.Area).Titled("Area Name").Sortable(true).Filterable(true);
                       columns.Add(m => m.Truck).Titled("Plate No").Sortable(true).Filterable(true);
                       columns.Add(m => m.Driver).Titled("Driver").Sortable(true).Filterable(true);
                       columns.Add(m => m.Wave).Titled("Wave").Sortable(true).Filterable(true);
                       columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @Ajax.ActionLink("View Shipments", "Shipments", new { distDate = m.TransactionDate, driver = m.Driver, plateNo = m.Truck, username =m.Username, checker=m.Checker, marea=m.Area}, new AjaxOptions { UpdateTargetId = "Shipments" }));
                   }).WithPaging(10)
                    }
                }
            }
        </div>
    </div>
    <div id="Shipments" class="form-group" >
    </div>

}
@section scripts{

    <script>

        $(function () {
            $('.datecontrol').datepicker({dateformat:"MM/dd/yyyy"});
        });

    </script>
}