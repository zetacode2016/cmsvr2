@using GridMvc.Html
@model List<CMS2.Entities.BusinessType>
<br/>
<h4>Business Type</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridBusinessType").Columns(columns =>
        {
            columns.Add(m => m.BusinessTypeName).Titled("Business Type").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BusinessType/Edit?id=@m.BusinessTypeId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BusinessType/Delete?id=@m.BusinessTypeId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Business Type", "Add", null, new { @class = "btn btn-default" })