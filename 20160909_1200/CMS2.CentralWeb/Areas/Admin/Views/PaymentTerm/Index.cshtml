@using GridMvc.Html
@model List<CMS2.Entities.PaymentTerm>
<br/>
<h4>Payment Term</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridPaymentTerm").Columns(columns =>
        {
            columns.Add(m => m.PaymentTermName).Titled("Payment Term").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentTerm/Edit?id=@m.PaymentTermId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentTerm/Delete?id=@m.PaymentTermId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Payment Term", "Add", null, new { @class = "btn btn-default" })