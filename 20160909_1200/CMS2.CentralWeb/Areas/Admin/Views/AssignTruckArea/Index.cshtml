@using GridMvc.Html
@model List<CMS2.Entities.TruckAreaMapping>
<br />
<h4>Truck Area Assignment</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridTruckAreaMapping").Columns(columns =>
        {
            columns.Add(m => m.Truck.PlateNo).Titled("Plate No").Sortable(true).Filterable(true);
            columns.Add(m => m.RevenueUnit.RevenueUnitName).Titled("Area").Sortable(true).Filterable(true);
            columns.Add(m => m.DateAssignedString).Titled("Date Assigned").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AssignTruckArea/Edit?id=@m.TruckAreaMappingId">Edit</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Truck Area Assignment", "Add", null, new { @class = "btn btn-default" })