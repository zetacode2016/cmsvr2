@using GridMvc.Html
@model List<CMS2.Entities.AccountType>
<br/>
<h4>Account Type</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridAccountType").Columns(columns =>
        {
            columns.Add(m => m.AccountTypeName).Titled("Account Type").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AccountType/Edit?id=@m.AccountTypeId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AccountType/Delete?id=@m.AccountTypeId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Account Type", "Add", null, new { @class = "btn btn-default" })