@using GridMvc.Html
@model List<CMS2.Entities.User>
<br/>
<h4>Users</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridUser").Columns(columns =>
        {
            columns.Add(m => m.UserName).Titled("Username").Sortable(true).Filterable(true);
            columns.Add(m => m.Employee.FirstName).Titled("First Name").Sortable(true).Filterable(true);
            columns.Add(m => m.Employee.LastName).Titled("Last Name").Sortable(true).Filterable(true);
            columns.Add(m => m.RecordStatus).Titled("Record Status").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="User/InputForm?id=@m.UserId">Edit</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add User", "InputForm", null, new { @class = "btn btn-default" })