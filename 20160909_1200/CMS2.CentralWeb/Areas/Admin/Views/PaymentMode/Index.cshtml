@using GridMvc.Html
@model List<CMS2.Entities.PaymentMode>
<br/>
<h4>Payment Mode</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridPaymentMode").Columns(columns =>
            {
                columns.Add(m => m.PaymentModeCode).Titled("Payment Mode Code").Sortable(true).Filterable(true);
                columns.Add(m => m.PaymentModeName).Titled("Payment Mode").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentMode/Edit?id=@m.PaymentModeId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentMode/Delete?id=@m.PaymentModeId">Delete</a>);
            }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Payment Mode", "Add", null, new { @class = "btn btn-default" })