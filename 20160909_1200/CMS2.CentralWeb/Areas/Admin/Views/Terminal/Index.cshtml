@using GridMvc.Html
@model List<CMS2.Entities.Terminal>
<br />
<h4>Truck</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridTerminal").Columns(columns =>
   {
   columns.Add(m => m.TerminalCode).Titled("Code").Sortable(true).Filterable(true);
   columns.Add(m => m.TerminalName).Titled("Name").Sortable(true).Filterable(true);
   columns.Add(m => m.TerminalDescription).Titled("Desc").Sortable(true).Filterable(true);
   columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Terminal/Edit?id=@m.TerminalId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Terminal/Delete?id=@m.TerminalId">Delete</a>);
            }).WithPaging(10)
    }
}
<br />
@Html.ActionLink("Add Terminal", "Add", null, new { @class = "btn btn-default" })