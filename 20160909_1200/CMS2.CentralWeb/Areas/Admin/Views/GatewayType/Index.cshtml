@using GridMvc.Html
@model List<CMS2.Entities.GatewayType>
<br/>
<h4>Gateway Type</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("GatewayType").Columns(columns =>
        {
            columns.Add(m => m.GatewayTypeName).Titled("Gateway Type").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="GatewayType/Edit?id=@m.GatewayTypeId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="GatewayType/Delete?id=@m.GatewayTypeId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Gateway Type", "Add", null, new { @class = "btn btn-default" })