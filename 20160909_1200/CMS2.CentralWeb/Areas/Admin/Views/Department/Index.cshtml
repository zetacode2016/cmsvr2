@using GridMvc.Html
@model List<CMS2.Entities.Department>
<br />
<h4>Department</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridDepartment").Columns(columns =>
        {
            columns.Add(m => m.DepartmentName).Titled("Department").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Department/Edit?id=@m.DepartmentId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Department/Delete?id=@m.DepartmentId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Department", "Add", null, new { @class = "btn btn-default" })