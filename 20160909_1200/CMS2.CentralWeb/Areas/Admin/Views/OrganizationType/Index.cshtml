@using GridMvc.Html
@model List<CMS2.Entities.OrganizationType>
<br/>
<h4>Organization Type</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridOrganizationType").Columns(columns =>
        {
            columns.Add(m => m.OrganizationTypeName).Titled("Organization Type").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="OrganizationType/Edit?id=@m.OrganizationTypeId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="OrganizationType/Delete?id=@m.OrganizationTypeId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Organization Type", "Add", null, new { @class = "btn btn-default" })