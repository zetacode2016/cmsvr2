@using GridMvc.Html
@model List<CMS2.Entities.RevenueUnit>
<br />
<h4>Gateway Satellite Offices</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridGatewaySat").Columns(columns =>
        {
            columns.Add(m => m.RevenueUnitName).Titled("Gateway Satellite").Sortable(true).Filterable(true);
            columns.Add(m => m.Cluster.ClusterName).Titled("Cluster").Sortable(true).Filterable(true);
            columns.Add(m => m.City.CityName).Titled("City").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="GatewaySatellite/Edit?id=@m.RevenueUnitId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="GatewaySatellite/Delete?id=@m.RevenueUnitId">Delete</a>);
        }).WithPaging(10)
    }
}
<br />
@Html.ActionLink("Add Gateway Satellite", "Add", null, new { @class = "btn btn-default" })