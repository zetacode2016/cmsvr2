@using GridMvc.Html
@model List<CMS2.Entities.AccountStatus>
<br />
<h4>Account Status</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridAccountType").Columns(columns =>
        {
            columns.Add(m => m.AccountStatusName).Titled("Account Status").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AccountStatus/Edit?id=@m.AccountStatusId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AccountStatus/Delete?id=@m.AccountStatusId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Account Status", "Add", null, new { @class = "btn btn-default" })