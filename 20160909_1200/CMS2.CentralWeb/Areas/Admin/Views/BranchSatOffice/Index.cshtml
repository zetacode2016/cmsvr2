@using GridMvc.Html
@model List<CMS2.Entities.RevenueUnit>
<br />
<h4>Branch Satellite Offices</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridBranchsatOff").Columns(columns =>
            {
                columns.Add(m => m.RevenueUnitName).Titled("Branch Sat Off").Sortable(true).Filterable(true);
                columns.Add(m => m.Cluster.ClusterName).Titled("Cluster").Sortable(true).Filterable(true);
                columns.Add(m => m.City.CityName).Titled("City").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BranchSatOffice/Edit?id=@m.RevenueUnitId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BranchSatOffice/Delete?id=@m.RevenueUnitId">Delete</a>);
            }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add BSO", "Add", null, new { @class = "btn btn-default" })