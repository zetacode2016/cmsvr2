@model CMS2.Entities.UnitOfMeasure
<br/>
<h4>Unit Of Measure</h4>

@using (Html.BeginForm("InputForm", "UnitOfMeasure", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger", id = "validationsummary" })

    @Html.HiddenFor(m => m.UnitOfMeasureId)

    if (Convert.ToBoolean(ViewBag.IsNew))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UnitOfMeasureName, new { @class = "col-md-2 control-label", @style = "width:100%" })
            <div class="col-md-10" style="width: 100%">
                @Html.TextBoxFor(m => m.UnitOfMeasureName, new { @class = "form-control" })
            </div>
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UnitOfMeasureName, new { @class = "col-md-2 control-label", @style = "width:100%" })
            <div class="col-md-10" style="width: 100%">
                @Html.TextBoxFor(m => m.UnitOfMeasureName, new { @class = "form-control", @readonly = true })
            </div>
        </div>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.UnitOfMeasureTypeId, new { @class = "col-md-2 control-label", @style = "width:100%" })
        <div class="col-md-10" style="width: 100%">
            @Html.DropDownListFor(m => m.UnitOfMeasureTypeId, (SelectList)ViewBag.UoMTypes, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RecordStatus, new { @class = "col-md-2 control-label", @style = "width:100%" })
        <div class="col-md-10" style="width: 100%">
            @Html.EnumDropDownListFor(m => m.Record_Status, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        &nbsp;
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin:0">
            <input id="saveButton" type="submit" class="btn btn-default" value="Save" />
            <input id="cancelButton" type="button" class="btn btn-default" value="Cancel" onclick="CancelInputForm();" />
        </div>
    </div>
}