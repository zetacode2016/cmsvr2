@using GridMvc.Html
@model List<CMS2.Entities.TruckDriverMapping>
<br />
<h4>Truck Driver Assignment</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridTruckDriverMapping").Columns(columns =>
        {
            columns.Add(m => m.Truck.TruckModel).Titled("Model").Sortable(true).Filterable(true);
            columns.Add(m => m.Truck.PlateNo).Titled("Plate No").Sortable(true).Filterable(true);
            columns.Add(m => m.Employee.FullName).Titled("Employee Name").Sortable(true).Filterable(true);
            columns.Add(m => m.DateAssignedString).Titled("Date Assigned").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="AssignTruckDriver/Edit?id=@m.TruckDriverMappingId">Edit</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Truck Driver Assignment", "Add", null, new { @class = "btn btn-default" })