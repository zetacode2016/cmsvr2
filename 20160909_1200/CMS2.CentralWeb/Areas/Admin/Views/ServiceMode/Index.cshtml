@using GridMvc.Html
@model List<CMS2.Entities.ServiceMode>
<br/>
<h4>Service Mode</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridServiceMode").Columns(columns =>
            {
                columns.Add(m => m.ServiceModeCode).Titled("Service Mode Code").Sortable(true).Filterable(true);
                columns.Add(m => m.ServiceModeName).Titled("Service Mode Name").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="ServiceMode/Edit?id=@m.ServiceModeId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="ServiceMode/Delete?id=@m.ServiceModeId">Delete</a>);
            }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Service Mode", "Add", null, new { @class = "btn btn-default" })