@using GridMvc.Html
@model List<CMS2.Entities.Region>
<br/>
<h4>Region</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridRegion").Columns(columns =>
        {
            columns.Add(m => m.RegionName).Titled("Region").Sortable(true).Filterable(true);
            columns.Add(m => m.Group.GroupName).Titled("Group").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Region/Edit?id=@m.RegionId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Region/Delete?id=@m.RegionId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Region", "Add", null, new { @class = "btn btn-default" })