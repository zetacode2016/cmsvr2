@using GridMvc.Html
@model List<CMS2.Entities.Group>
<br/>
<h4>Group</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridGroup").Columns(columns =>
        {
            columns.Add(m => m.GroupName).Titled("Group").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Group/Edit?id=@m.GroupId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Group/Delete?id=@m.GroupId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Group", "Add", null, new { @class = "btn btn-default" })