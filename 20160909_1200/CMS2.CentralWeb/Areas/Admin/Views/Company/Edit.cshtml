            @Html.Grid(Model.Clients).Named("gridClient").Columns(columns =>
        {
            columns.Add(m => m.FullName).Titled("Name").Sortable(true).Filterable(true);
            columns.Add(m => m.Title).Titled("Title");
            columns.Add(m => m.ContactNo).Titled("Contact No");
            columns.Add(m => m.City.CityName).Titled("City").Sortable(true).Filterable(true);
        }).WithPaging(5)
        }
        <div class="row">
            <div class="col-md-6 col-md-pull-1">
                <div class="form-group">

                </div>
            </div>
            <div class="col-md-6 col-md-pull-1">
                <div class="form-group">
                    @Html.ActionLink("Add Representative", "Add", "Client", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </section>
    <hr />
    <h4>Approving Authority</h4>
    <section>
        @{
            @Html.Grid(Model.ApprovingAuthorities).Named("gridApprovingAuthority").Columns(columns =>
        {
            columns.Add(m => m.FullName).Titled("Name").Sortable(true).Filterable(true);
            columns.Add(m => m.Position).Titled("Title");
            columns.Add(m => m.Department).Titled("Department");
            columns.Add(m => m.ContactNo).Titled("Contact No");
        }).WithPaging(5)
        }
        <div class="row">
            <div class="col-md-6 col-md-pull-1">
                <div class="form-group">

                </div>
            </div>
            <div class="col-md-6 col-md-pull-1">
                <div class="form-group">
                    @Html.ActionLink("Add Approving Authority", "Add","ApprovingAuthority", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </section>

    <div class="form-group">
        &nbsp;
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin:0">
            <input id="saveButton" type="submit" class="btn btn-default" value="Save" />
            @Html.ActionLink("Cancel", "Index", "Company", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
