@using GridMvc.Html
@model List<CMS2.Entities.Gateway>
<br/>
<h4>Gateway</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridGateway").Columns(columns =>
        {
            columns.Add(m => m.GatewayCode).Titled("Code").Sortable(true).Filterable(true);
            columns.Add(m => m.GatewayName).Titled("Name").Sortable(true).Filterable(true);
            columns.Add(m => m.GatewayType.GatewayTypeName).Titled("Gateway Type").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Gateway/Edit?id=@m.GatewayId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Gateway/Delete?id=@m.GatewayId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Gateway", "Add", null, new { @class = "btn btn-default" })