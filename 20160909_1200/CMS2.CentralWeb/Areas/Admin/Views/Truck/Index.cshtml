@using GridMvc.Html
@model List<CMS2.Entities.Truck>
<br />
<h4>Truck</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridTruck").Columns(columns =>
            {
                columns.Add(m => m.TruckModel).Titled("Model").Sortable(true).Filterable(true);
                columns.Add(m => m.PlateNo).Titled("Plate No").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Truck/Edit?id=@m.TruckId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Truck/Delete?id=@m.TruckId">Delete</a>);
            }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Truck", "Add", null, new { @class = "btn btn-default" })