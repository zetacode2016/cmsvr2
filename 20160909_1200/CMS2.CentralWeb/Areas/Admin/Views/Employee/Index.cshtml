@using GridMvc.Html
@model List<CMS2.Entities.Employee>
<br />
<h4>Employee Info</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridEmployee").Columns(columns =>
        {
            columns.Add(m => m.FirstName).Titled("First Name").Sortable(true).Filterable(true);
            columns.Add(m => m.MiddleName).Titled("Middle Name").Sortable(true).Filterable(true);
            columns.Add(m => m.LastName).Titled("Last Name").Sortable(true).Filterable(true);
            columns.Add(m => m.Birthdate).Titled("Birthdate").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Employee/Edit?id=@m.EmployeeId">Edit</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Employee", "Add", null, new { @class = "btn btn-default" })