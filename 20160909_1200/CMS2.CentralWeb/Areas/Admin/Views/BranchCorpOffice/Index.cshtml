@using GridMvc.Html
@model List<CMS2.Entities.BranchCorpOffice>
<br />
<h4>Branch Corporate Offices</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridBco").Columns(columns =>
        {
            columns.Add(m => m.BranchCorpOfficeName).Titled("BCO").Sortable(true).Filterable(true);
            columns.Add(m => m.Region.RegionName).Titled("Region").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BranchCorpOffice/Edit?id=@m.BranchCorpOfficeId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="BranchCorpOffice/Delete?id=@m.BranchCorpOfficeId">Delete</a>);
        }).WithPaging(10)
    }
}
<br />
@Html.ActionLink("Add BCO", "Add", null, new { @class = "btn btn-default" })