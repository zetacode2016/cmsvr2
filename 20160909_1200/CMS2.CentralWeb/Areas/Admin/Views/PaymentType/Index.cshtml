@using GridMvc.Html
@model List<CMS2.Entities.PaymentType>
<br/>
<h4>Payment Type</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridPaymentType").Columns(columns =>
            {
                columns.Add(m => m.PaymentTypeName).Titled("Payment Type").Sortable(true).Filterable(true);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentType/Edit?id=@m.PaymentTypeId">Edit</a>);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="PaymentType/Delete?id=@m.PaymentTypeId">Delete</a>);
            }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Payment Type", "Add", null, new { @class = "btn btn-default" })