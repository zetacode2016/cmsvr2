                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-md-pull-1">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TotalCurrentSubTotalString, new { @class = "control-label col-md-2", @style = "width:40%; padding-right: 5px" })
                        <div class="col-md-10" style="width: 60%;padding-left: 5px">
                            @Html.TextBoxFor(m => m.TotalCurrentSubTotalString, new { @class = "form-control", @readonly = true, @style = "width:100px; text-align: right;" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-pull-1">
