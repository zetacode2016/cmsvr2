@using GridMvc.Html
@model List<CMS2.Entities.Cluster>
<br />
<h4>Cluster</h4>

@{
    if (Model != null)
    {
        @Html.Grid(Model).Named("gridCluster").Columns(columns =>
        {
            columns.Add(m => m.ClusterName).Titled("Cluster").Sortable(true).Filterable(true);
            columns.Add(m => m.BranchCorpOffice.BranchCorpOfficeName).Titled("BCO").Sortable(true).Filterable(true);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Cluster/Edit?id=@m.ClusterId">Edit</a>);
            columns.Add().Encoded(false).Sanitized(false).RenderValueAs(m => @<a href="Cluster/Delete?id=@m.ClusterId">Delete</a>);
        }).WithPaging(10)
    }
}
<br/>
@Html.ActionLink("Add Cluster", "Add", null, new { @class = "btn btn-default" })