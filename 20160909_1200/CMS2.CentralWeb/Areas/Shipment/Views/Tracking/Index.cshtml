@using GridMvc.Html
@model CMS2.CentralWeb.Areas.Shipment.ViewModels.TrackingQueryViewModel
<br />
<h4>AirwayBill Tracking</h4>

@using (Html.BeginForm("Index", "Tracking", FormMethod.Post, new { @class = "col-md-12 form-horizontal ", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger", id = "validationsummary" })

    <br />
    <div class="row">
        <div class="col-md-12 col-md-pull-1">
            <div class="form-group">
                @Html.LabelFor(m => m.AirwayBillNo, new { @class = "control-label col-md-2", @style = "width:30%; padding-right: 5px" })
                <div class="col-md-8" style="width: 30%; padding-left: 5px">
                    @Html.TextBoxFor(m => m.AirwayBillNo, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-pull-1">
            <div class="form-group">
                <div class="control-label col-md-2" style="width: 30%; padding-right: 5px">&nbsp;</div>
                <div class="col-md-8" style="width: 30%; padding-left: 5px">
                    <input id="saveButton" type="submit" class="btn btn-default" value="Find" />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-12 col-md-push-2" style="margin:0">
            @{
    if (Model != null)
    {
        if (Model.TrackingViewModels != null)
        {
            @Html.Grid(Model.TrackingViewModels).Named("gridTracking").Columns(columns =>
                                    {
                                        columns.Add(m => m.Weekday).Titled("Day");
                                        columns.Add(m => m.Date).Titled("Date");
                                        columns.Add(m => m.Time).Titled("Time");
                                        columns.Add(m => m.Status).Titled("Status");
                                        columns.Add(m => m.Location).Titled("Location");
                                    })
        }
    }
            }
        </div>
    </div>
}
