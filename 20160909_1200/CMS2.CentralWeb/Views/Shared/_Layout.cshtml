    <script type="text/javascript">

        $(document).ready(function () {
            $('.dropdown-submenu a.moremenu').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });

            $('.dropdown-submenu a.moremenu').on("hover", function (e) {
                $(this).next('ul').toggle();
